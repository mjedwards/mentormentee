<h6>Dashboard</h6>
<h3>Welcome {{name}}</h3>
<p>Take time to log your activities with your mentee</p>
{{#if notes}}
    <table class="stripped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            {{#each notes}}
                <tr>
                    <td>
                        <a href="/notes/{{_id}}">{{title}}</a>
                    </td>
                    <td>
                        {{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}
                    </td>
                    <td>
                        <span class="dash-status">{{status}}</span>
                    </td>
                    <td>
                        <a href="/notes/edit/{{_id}}" class="btn btn-float">
                            <i class="fas fa-edit"></i>
                        </a>
                        <form action="/notes/{{_id}}" method="POST" id='delete-form'>
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn red">
                                <i class="fas fa-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
<p>There is nothing here! Let's fix that :)</p>
{{/if}}

