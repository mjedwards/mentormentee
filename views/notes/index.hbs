<h1>Notes</h1>
<div class="row">
    {{#each notes}}
    <div class="col s12 m4">
        <div class="card">
            <div class="card-image">
                {{{editIcon user ../user _id }}} 
            </div>
            <div class="card-content center-align">
                <h5>{{title}}</h5>
                <p>{{truncate (stripTags body) 150}}</p>
                <div class="chip">
                    <img src="{{user.image}}" alt="user profile image">
                    <a href="/notes/user/{{user._id}}">{{user.displayName}}</a>
                </div>
            </div>
            <div class="card-actio center-align">
                <a href="/notes/{{_id}}">Read More</a>
            </div>
        </div>
    </div>
    {{else}}
        <p>No Notes to Show</p>
    {{/each}}
</div>